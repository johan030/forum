{% extends 'base.html.twig' %}

{% block title %}Accueil | Stackoverflow{% endblock %}

{% block body %}

<h1 class="text-center">Top Question</h1>

	<div class="col-md-6 m-auto py-4">
		{{form_start(form)}}
		{{form_end(form)}}
	</div>


	{% for post in posts %}


		<div class="container">
			<div class="row">
				<div class="col-md-1"></div>
				<div class="col-md-8 m-auto py-4">
					<div id="postlist">
						<div class="panel">
							<div class="panel-heading">
								<div class="text-center">
									<div class="row">
										<div class="col-sm-9">
											<h3 class="pull-left">{{post.title}}</h3>
										</div>
										<div class="col-sm-3">
											<h4 class="pull-right">
												<small>
													<em>{{post.createdAt|date('d-m-Y H:i:s')}}</em>
												</small>
											</h4>
										</div>
									</div>
								</div>
							</div>

							<div class="panel-body">
								{{post.content}}
							</div>

							<div class="panel-footer"></div>
						</div>

						<div class="panel">
							<div class="panel-heading">
							
							</div>


						</div>
					</div>
					<div class="text-center">
						<a href="{{path("show_post",{'id': post.id})}}" id="loadmore" class="btn btn-primary">Voir plus</a>
					</div>
				</div>
				<div class="col-md-1"></div>
				<div class="col-md-3"></div>
				<div class="col-md-1"></div>
			</div>
		</div>

	{% endfor %}


{% endblock %}
